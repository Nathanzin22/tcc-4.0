<%- include ("partials/header.ejs")%>
<body>
<%- include ("partials/load.ejs")%>
    <%- include ("partials/navbar.ejs")%>
    <%- include ("partials/erro.ejs")%>
    <%- include ("partials/sucess.ejs")%>
    <div class="container">
        <h1 align="center" class="mt-4">Dados do seu Perfil</h1>
        <div class="card">
            <div class="card-header">
                <h3>Perfil</h3>
            </div>
            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="  col-md-8">
                        <div>

                            <% if(foto != null ){ %>

                            <img src="/foto/<%=foto.nome%>" alt="foto1" width="300" height="400">

                                
                          <%  }else { %>
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTOc9VDs02ZrmIC7pS3WzBTvXl8UrI3jwAOVQ&usqp=CAU" alt="foto1" width="300">
                       
                       <% } %>
                        </div> 
                        <form action="/users/perfil/foto" method="post" enctype="multipart/form-data" class="mt-3">
                            <input type="file"  class="btn btn-outline-success" name="foto" id="foto" required>
                           <button type="submit" class="btn btn-success" >Carregar</button>
                        </form>
                         
                    </div>
                   
                    <div class=" col-md-4">
                        <br>
                        <br>
                        <label for="">Nome</label>
                         <p class="form"><Strong><%=usuario.nome%></Strong> </p>
                         <label for=""> cpf</label>
                         <p class="form"><Strong><%=usuario.cpf%></Strong> </p>
                         <label for=""> email</label>
                         <p class="form"><Strong><%=usuario.email%></Strong> </p>
                         <label for=""> profissao</label>
                         <p class="form"><Strong><%=usuario.profissao%></Strong> </p>
                         <label for=""> telefone</label>
                         <p class="form"><Strong><%=usuario.telefone%></Strong> </p>
                       
                    
                    </div>
                    
                
                </div>
            </div>
        </div>
       
    </div>
</body>
<%- include ("partials/footer.ejs")%>