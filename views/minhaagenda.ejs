        <%if(agenda.length >= 1) { %>

        <%agenda.forEach((agenda)=>{ %>
            <div class="card">
                <div class="card-body">
                <small>Data: <strong><%= agenda.data%></strong> </small> <br>
                <small>Hora: <strong><%= agenda.horario%></strong> </small> <br>
                <small>disponibilidade: <strong><%= agenda.disponibilidade%></strong> </small> <br>
                 
                <a href="/users/cunsultas/editar/<%= agenda.id%>" class="btn btn-success">Editar</a>
                <a href="/users/cunsultas/deletar/<%= agenda.id%>" class="btn btn-danger">Eliminar</a>

            </div>
            </div>
      <%  }) %>   
         

    <% } %>
    </div>
