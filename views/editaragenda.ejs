<%- include ("partials/header.ejs") %>
<body>
<%- include ("partials/navbar.ejs") %>
<%- include ("partials/load.ejs") %>

<%- include ("partials/erro.ejs") %>
<%- include ("partials/sucess.ejs") %>

<div class="container">
    <br>
    <h1 class="text-center display-6 mt-5">Editar Agenda de trabalho</h1><br>
    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Vero beatae fuga quasi aliquam dolore rem praesentium!
        Expedita, repellat veniam. Beatae minus magni vitae quisquam quo maiores est voluptatibus obcaecati
        similique.</p>

    <div class="card mt-4">
        <div class="card-body">
            <h3>Preencher os dados</h3> <br>

            <div class="" style="width: 60%; margin: auto;">
                <div class="container">
                    <form action="/users/agenda/editar" method="POST">

                        <input type="hidden" name="id" value="<%= id %>">

                        <label for="data">Agendar o dia </label>
                        <input name="data" id="data" type="date" class="form-control" value="<%= new Date(agenda.data).toISOString().split('T')[0] %>" required> <br>

                        <label for="horario">Agendar a hora</label>
                        <input name="horario" id="horario" type="time" class="form-control" value="<%= agenda.horario %>" required> <br>

                        <label for="disponibilidade">Selecione a Disponibilidade</label>
                        <select name="disponibilidade" id="disponibilidade" class="form-control">
                            <option value="1">Aberto</option>
                            <option value="0">Fechado</option>
                        </select> <br>

                        <label for="obs">Observação</label>
                        <textarea id="obs" name="obs" class="form-control"><%= agenda.obs %></textarea> <br>

                        <button class="btn btn-success" type="submit">Agendar</button>
                        <a class="btn alert-danger" href="/" type="button">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
